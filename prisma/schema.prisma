// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("FARMER_POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("FARMER_POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id            String       @default(cuid()) @id
  name          String?
  email         String?   @unique
  password      String
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  @@map(name: "users")
}